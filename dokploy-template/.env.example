# EDData Dokploy template envs (mirrors service repos)

# Global domain + runtime defaults shared across services
EDDATA_DOMAIN=eddata-api.com
NODE_ENV=production

# Public URLs consumed by eddata-api, eddata-auth, eddata-www
EDDATA_API_BASE_URL=https://api.${EDDATA_DOMAIN}
EDDATA_AUTH_BASE_URL=https://auth.${EDDATA_DOMAIN}
EDDATA_WWW_BASE_URL=https://${EDDATA_DOMAIN}
EDDATA_AUTH_COOKIE_DOMAIN=.${EDDATA_DOMAIN}

# OAuth + security secrets (auth service will not start without these)
EDDATA_AUTH_CLIENT_ID=change-me
EDDATA_SESSION_SECRET=
EDDATA_AUTH_JWT_SECRET=

# Service ports (match eddata-* repos; change only if needed)
EDDATA_COLLECTOR_LOCAL_PORT=3002
EDDATA_API_LOCAL_PORT=3001
EDDATA_AUTH_LOCAL_PORT=3003

# Collector settings from eddata-collector
EDDN_SERVER=tcp://eddn.edcd.io:9500
EDDATA_DOWNLOADS_BASE_URL=https://downloads.${EDDATA_DOMAIN}

# Shared directories (used by collector + api + auth)
EDDATA_DATA_DIR=/app/eddata-data
EDDATA_CACHE_DIR=/app/eddata-data/cache
EDDATA_BACKUP_DIR=/app/eddata-backup
EDDATA_DOWNLOADS_DIR=/app/eddata-downloads

# Optional maintenance window (UTC) recognized by collector/api
MAINTENANCE_DAY_OF_WEEK=4
MAINTENANCE_WINDOW_START_HOUR=7
MAINTENANCE_WINDOW_END_HOUR=9

# Observability tweaks (supported by collector/api/www)
LOG_LEVEL=info
# NODE_OPTIONS=--max-old-space-size=4096
